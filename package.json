{
	"name": "exos-interface-builder",
	"displayName": "exOS Interface Builder",
	"description": "Code Generator for exOS Hybrid Modules",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:exos-interface-builder.generateTemplate",
		"onCommand:exos-interface-builder.updateHeader"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "exos-interface-builder.generateTemplate",
				"title": "Generate exOS Template"
			},
			{
				"command": "exos-interface-builder.updateHeader",
				"title": "Update exOS Header"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "filesExplorerFocus && resourceExtname == .typ",
					"command": "exos-interface-builder.generateTemplate",
					"group": "2_workspace"
				},
				{
					"when": "filesExplorerFocus && resourceExtname == .typ",
					"command": "exos-interface-builder.updateHeader",
					"group": "2_workspace"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
