{
	"name": "exos-component-extension",
	"publisher": "exOS-ComponentExtension",
	"repository": "https://github.com/br-automation-com/exOS-ComponentExtension",
	"displayName": "exOS Component Generator",
	"description": "Code Generator for exOS Hybrid Components",
	"icon": "exOS.png",
	"version": "0.0.6",
	"engines": {
		"vscode": "^1.50.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:exos-component-extension.generateTemplate",
		"onCommand:exos-component-extension.updateHeader"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "exos-component-extension.generateTemplate",
				"title": "Generate exOS C-Template"
			},
			{
				"command": "exos-component-extension.updateHeader",
				"title": "Update exOS Header"
			}
		],
		"menus": {
			"explorer/context": [
				{
					"when": "filesExplorerFocus && resourceExtname == .typ",
					"command": "exos-component-extension.generateTemplate",
					"group": "2_workspace"
				},
				{
					"when": "filesExplorerFocus && resourceExtname == .typ",
					"command": "exos-component-extension.updateHeader",
					"group": "2_workspace"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/vscode": "^1.50.0",
		"@types/glob": "^7.1.3",
		"@types/mocha": "^8.0.0",
		"@types/node": "^12.11.7",
		"eslint": "^7.9.0",
		"glob": "^7.1.6",
		"mocha": "^8.1.3",
		"typescript": "^4.0.2",
		"vscode-test": "^1.4.0"
	}
}
